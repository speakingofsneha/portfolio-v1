---
import "../styles/global.scss";
import "../styles/notes.scss";
import { ViewTransitions } from 'astro:transitions';
---

<!DOCTYPE html>
<html class="centered" lang="en" dir="ltr">

<head>
    <meta charset="utf-8">
    <title> hello, world!</title>
    <meta name="viewport" content="window-width window-height">
    <link rel="icon" type="image/svg+xml" href="/favicon.png"/>
    <ViewTransitions />
</head>

<body class="copy" id="article">
    <a href="../" class="notes-back" style="margin-top: 16px; margin-left: 20px;">‚Üê back</a>
    <div class="center-wrap">
      <p>coming soon :)</p>
    </div>
    <style>
      /* Center content and avoid scroll */
      body#article {
        min-height: 100vh;
        display: grid;
        place-items: center;
        overflow: hidden; /* ensure no scroll on minimal content page */
      }
      .center-wrap p { margin: 0; }
      /* Keep back link off the flow so it doesn't add height */
      .notes-back { position: fixed; top: 16px; left: 16px; }
    </style>
</body>
</html>
